 file=$HOME/.aws/$1.credentials 
 pem=$HOME/.aws/$1.pem
 cert=$HOME/.aws/$1.x509.pem

if [ ! -f $file ]; then
  echo "$file does not exist.  Please create a template file for this account in the format of"
  echo "Have you ran GenerateDotAwsFolder.rb in 3yd-network"
else
  chmod 600 $file
  export AWS_CREDENTIAL_FILE=$file
fi

if [ ! -f $pem ]; then
  echo "$pem does not exist.  Please place the private key for this account in the correct file"
  echo "Have you ran GenerateDotAwsFolder.rb in 3yd-network"
else
  chmod 600 $pem
  export EC2_PRIVATE_KEY=$pem
fi

if [ ! -f $cert ]; then
  echo "$cert does not exist.  Please place the x509 certificate key for this account in the correct file"
  echo "Have you ran GenerateDotAwsFolder.rb in 3yd-network"
else
  chmod 600 $cert
  export EC2_CERT=$cert
fi
